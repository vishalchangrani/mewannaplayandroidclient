<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  <ImageView
    android:id="@+id/info_popup_androidicon"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:layout_marginBottom="5dip"
    android:paddingRight="5dip"
    android:layout_width="wrap_content"
    android:paddingBottom="5dip"
    android:layout_height="wrap_content"
    android:src="@drawable/androidicon"></ImageView>

  <TextView
    android:id="@+id/info_popup_androidicon_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:text="Your current location"
    android:gravity="center"
    android:textSize="12sp"
    android:layout_toRightOf="@id/info_popup_androidicon"
    android:layout_alignTop="@id/info_popup_androidicon"></TextView>

  <ImageView
    android:id="@+id/info_popup_tennisball_yellow"
    android:layout_below="@id/info_popup_androidicon"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:paddingRight="5dip"
    android:layout_marginBottom="5dip"
    android:layout_width="wrap_content"
    android:paddingBottom="5dip"
    android:layout_height="wrap_content"
    android:text="CheckBox 1"
    android:src="@drawable/tennisball_yellow_16"></ImageView>

  <TextView
    android:id="@+id/info_popup_tennisball_yellow_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:text="Tennis courts available "
    android:gravity="center"
    android:textSize="12sp"
    android:layout_toRightOf="@id/info_popup_tennisball_yellow"
    android:layout_alignTop="@id/info_popup_tennisball_yellow"></TextView>

  <ImageView
    android:id="@+id/info_popup_tennisball_red"
    android:layout_below="@id/info_popup_tennisball_yellow"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:paddingRight="5dip"
    android:layout_marginBottom="5dip"
    android:layout_width="wrap_content"
    android:paddingBottom="5dip"
    android:layout_height="wrap_content"
    android:text="CheckBox 1"
    android:src="@drawable/tennisball_red_15"></ImageView>

  <TextView
    android:id="@+id/info_popup_tennisball_red_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:text="All courts are occupied"
    android:gravity="center"
    android:textSize="12sp"
    android:layout_toRightOf="@id/info_popup_tennisball_red"
    android:layout_alignTop="@id/info_popup_tennisball_red">
  </TextView>



  <ImageView
    android:id="@+id/info_popup_tennisball_green"
    android:layout_below="@id/info_popup_tennisball_red"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:paddingRight="5dip"
    android:layout_marginBottom="5dip"
    android:layout_width="wrap_content"
    android:paddingBottom="5dip"
    android:layout_height="wrap_content"
    android:text="CheckBox 1"
    android:src="@drawable/tennisball_green_18"></ImageView>

  <TextView
    android:id="@+id/info_popup_tennisball_green_text"
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:text="You are in proximity of the court "
    android:gravity="center"
    android:layout_toRightOf="@id/info_popup_tennisball_green"
    android:layout_alignTop="@id/info_popup_tennisball_green"></TextView>

  <ImageView
    android:id="@+id/info_popup_flag"
    android:layout_below="@id/info_popup_tennisball_green"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="2dip"
    android:paddingRight="5dip"
    android:layout_marginBottom="5dip"
    android:layout_width="wrap_content"
    android:paddingBottom="5dip"
    android:layout_height="wrap_content"
    android:text="CheckBox 1"
    android:src="@drawable/flag"></ImageView>

  <TextView
    android:id="@+id/info_popup_flag_text"
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dip"
    android:text=" You have marked a court occupied here"
    android:gravity="center"
    android:layout_toRightOf="@id/info_popup_flag"
    android:layout_alignTop="@id/info_popup_flag"></TextView>



</RelativeLayout>