<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/scheduled_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="3:30pm"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/scheduled_time"
        android:focusable="false"
        android:text="Userabcd"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:text="3 hours ago"
        android:textColor="#FFFFFF"
        android:textSize="12dp" >
    </TextView>

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user"
        android:layout_below="@id/user"
        android:focusable="false"
        android:text="abcdefghijk@bbchhcb.com"
        android:textColor="#FFFFFF"
        android:textSize="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user"
        android:layout_below="@id/user"
        android:focusable="false"
        android:text="Meet me at the parking lot Red Honda"
        android:textColor="#FFFFFF"
       
        android:textSize="12dp" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user"
        android:layout_below="@id/message_text"
        android:focusable="false"
        android:text="Beginner"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/players_needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_text"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/level"
        android:focusable="false"
        android:text="Players needed: 3"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</RelativeLayout>