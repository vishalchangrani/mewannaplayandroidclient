<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/court_sub_table_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingLeft="10dip" >

    <TableRow android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/lockerRoomIcon"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/lockerRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Locker room"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/parking"
                android:layout_width="15dp"
                
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" >
            </ImageView>

            <TextView
                 android:id="@+id/parkingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Parking"
               android:textColor="#fff"
            
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>
    </TableRow>

    <TableRow android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/lessons"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/lessonstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Lessons"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/lights"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/lightstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Lights"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </TableRow>

    <TableRow android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/snackBar"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                 android:id="@+id/snackBartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Snack bar"
               android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/shop"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/shoptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Shop"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </TableRow>

</TableLayout>