<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#7DAEFF98" android:orientation="vertical" android:gravity="center">
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"  android:layout_centerInParent="true">
			<TextView android:paddingLeft="0dip" android:text="Play on"
				android:textSize="16sp" android:textStyle="bold" android:typeface="serif"
				android:textColor="#000000" android:gravity="left"
				android:layout_height="fill_parent" android:layout_width="wrap_content" />
			 <include layout="@layout/timeslider"  android:gravity="center"  />
			

</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal" android:layout_centerInParent="true" android:layout_marginTop="10dip">

			<TextView 
				android:paddingLeft="0dip" android:text="Level" android:textSize="16sp"
				android:textStyle="bold" android:typeface="serif" android:textColor="#000000"
				android:gravity="center_vertical|center" android:layout_height="fill_parent"
				android:layout_width="fill_parent" />
			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/level"
				android:gravity="center"  android:entries="@array/level_arrays"
        android:prompt="@string/level_prompt"></Spinner>

</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal"  android:layout_centerInParent="true" android:layout_marginTop="10dip">

			<TextView 
				android:paddingLeft="0dip" android:text="Players needed"
				android:textSize="16sp" android:textStyle="bold" android:typeface="serif"
				android:textColor="#000000" android:gravity="center_vertical|center"
				android:layout_height="fill_parent" android:layout_width="fill_parent" />
			<Spinner android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/players_needed"
				android:gravity="center" android:entries="@array/players_needed"
        android:prompt="@string/players_needed_prompt"></Spinner>

</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"  android:layout_centerInParent="true" android:layout_marginTop="10dip">
			<TextView android:paddingLeft="0dip" android:text="Contact info"
				android:textSize="16sp" android:textStyle="bold" android:typeface="serif"
				android:textColor="#000000" 
				android:layout_height="fill_parent" android:layout_width="wrap_content" android:gravity="center_vertical"/>
<EditText android:layout_height="wrap_content" android:id="@+id/contact_info" android:layout_width="fill_parent"></EditText>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"  android:layout_centerInParent="true" android:layout_marginTop="10dip">

			<TextView android:paddingLeft="0dip" android:text="Additional message"
				android:textSize="16sp" android:textStyle="bold" android:typeface="serif"
				android:textColor="#000000" android:gravity="center_vertical|center"
				android:layout_height="fill_parent" android:layout_width="wrap_content" />
			<EditText android:id="@+id/message" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />

</LinearLayout>

	
	<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal"  android:layout_centerInParent="true" android:layout_marginTop="50dip">
		<Button android:id="@+id/cancel"
			
			android:layout_width="150dip" android:layout_height="50dip"
		android:text="Cancel"
			android:textSize="10sp"  android:onClick="onCancel"/>

		<Button android:id="@+id/post_message"
			
			android:layout_width="150dip" android:layout_height="50dip"
			android:text="Post Message"
			android:textSize="10sp"/>
</LinearLayout>
	
</LinearLayout>