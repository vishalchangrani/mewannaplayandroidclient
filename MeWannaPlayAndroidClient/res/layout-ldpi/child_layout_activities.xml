

<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/court_sub_table_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <TableRow android:gravity="center_horizontal" 
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/adultProgram"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" >
            </ImageView>

            <TextView
                  android:id="@+id/adultProgramtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="New player adult program"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/teamTennis"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" >
            </ImageView>

            <TextView
                   android:id="@+id/teamTennistext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Team tennis"
                 android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" >
            </TextView>
        </LinearLayout>
    </TableRow>

    <TableRow android:gravity="center_horizontal" 
          android:layout_marginTop="-30dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/juniorProgram"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                  android:id="@+id/juniorProgramtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="New player junior program"
                 android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/tournaments"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                 android:id="@+id/tournamentstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Tournaments"
                 android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </TableRow>

    <TableRow android:gravity="center_horizontal" 
           android:layout_marginTop="-30dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ladders"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                 android:id="@+id/ladderstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Ladders"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
       
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/roundRobin"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
               
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/roundRobintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Round robins"
              
                  android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </TableRow>

    <TableRow android:gravity="center_horizontal" 
          android:layout_marginTop="-30dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
       
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/socialMixers"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                android:id="@+id/socialMixerstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Social/Mixers"
                  android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dip" >

            <ImageView
                android:id="@+id/seniors"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/check_or_uncheck_image" />

            <TextView
                  android:id="@+id/seniorstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="2dip"
                android:text="Seniors 50+"
                  android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="normal"
                android:typeface="serif" />
        </LinearLayout>
    </TableRow>

</TableLayout>

